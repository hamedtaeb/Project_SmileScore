{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run current Python file",
      "type": "shell",
      "command": "${command:python.interpreterPath}",
      "args": [
        "-u",
        "${file}"
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ]
}
